- cache [friend, current_user_or_guest.currency] do
  %article.friend
    - if friend.debt != 0
      %span{ class: "label label-#{variation(friend.debt)}" }
        - if friend.debt < 0
          = user_number_to_currency(friend.debt.abs)
        - elsif friend.debt > 0
          = user_number_to_currency(friend.debt)

    = link_to friend.name, friend
