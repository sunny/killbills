<h1>Bills</h1>

<p>
<%= link_to 'New Bill', new_bill_path %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>Amount</th>
    <th>Date</th>
    <th>User</th>
    <th>Friend</th>
    <th>User payed</th>
    <th>Friend payed</th>
    <th>User ratio</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bills.each do |bill| %>
  <tr>
    <td><%= bill.title %></td>
    <td><%= bill.amount %></td>
    <td><%= bill.date %></td>
    <td><%= link_to bill.user.name, bill.user %></td>
    <td><%= link_to bill.friend.name, bill.friend %></td>
    <td><%= bill.user_payed %></td>
    <td><%= bill.friend_payed %></td>
    <td><%= bill.user_ratio %></td>
    <td><%= link_to 'Show', bill %></td>
    <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
    <td><%= link_to 'Kill', bill, :confirm => 'Are you sure you want to kill bill?', :method => :delete %></td>
  </tr>
<% end %>
</table>

