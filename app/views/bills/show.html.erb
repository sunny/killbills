<h1><%= @bill.automatic_title %></h1>

<%= link_to 'Edit', edit_bill_path(@bill), :class => 'button' %>
<%= link_to 'Delete', @bill, :confirm => 'Are you sure you want to kill bill?', :method => :delete, :class => 'button delete' %>

<h2>Bill</h2>
<table>
  <tr>
    <th>Title</th>
    <td><%= @bill.title %></td>
  </tr>
  <tr>
    <th>Total</th>
    <td><%= number_to_currency @bill.total %></td>
  </tr>
  <tr>
    <th>Date</th>
    <td><%= @bill.date %></td>
  </tr>
</table>

<h2>Participations</h2>
<table>
  <thead>
    <th>Participant</th>
    <th>Payment</th>
    <th>Owes</th>
    <th>Debt</th>
  </thead>
  <tbody>
  <% for participation in @bill.participations %>
    <tr>
      <td><%= link_to_friend participation.person %></td>
      <td><%= number_to_currency participation.payment %></td>
      <td><%= number_to_currency participation.owed_total %> </td>
      <td class="<%= variation participation.debt %>">
        <%= number_to_currency participation.debt %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>Result</h2>
<% for debt in @bill.debts %>
<div class="owed <%= variation -debt.diff_for(@bill.user) %>">
  <%= debt_summary debt %></li>
</div>
<% end %>
